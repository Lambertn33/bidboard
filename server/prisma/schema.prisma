generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}

model User {
  id         String      @id @default(uuid())
  names      String
  email      String      @unique
  password   String
  role       Role        @default(FREELANCER)
  lastLogin  DateTime?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  freelancer Freelancer?

  @@map("users")
}

model Freelancer {
  id        String    @id @default(uuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @unique
  balance   Int       @default(0)
  telephone String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bids      Bid[]
  payments  Payment[]
  works     Work[]

  @@map("freelancers")
}

enum Role {
  ADMIN
  FREELANCER
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tasks       Task[]

  @@map("projects")
}

model Task {
  id          String     @id @default(uuid())
  name        String
  description String
  status      TaskStatus @default(OPEN)
  projectId   String
  project     Project    @relation(fields: [projectId], references: [id])
  price       Int
  skills      Json
  bids        Bid[]
  work        Work?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("tasks")
}

model Bid {
  id           String     @id @default(uuid())
  taskId       String
  task         Task       @relation(fields: [taskId], references: [id])
  freelancerId String
  freelancer   Freelancer @relation(fields: [freelancerId], references: [id])
  message      String
  status       BidStatus  @default(PENDING)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("bids")
}

model Work {
  id            String     @id @default(uuid())
  taskId        String     @unique
  task          Task       @relation(fields: [taskId], references: [id])
  freelancerId  String
  freelancer    Freelancer @relation(fields: [freelancerId], references: [id])
  startDate     DateTime   @default(now())
  endDate       DateTime
  completionUrl String?
  payment       Payment?
  status        WorkStatus @default(IN_PROGRESS)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("works")
}

model Payment {
  id           String     @id @default(uuid())
  workId       String     @unique
  work         Work       @relation(fields: [workId], references: [id])
  freelancerId String
  freelancer   Freelancer @relation(fields: [freelancerId], references: [id])
  amount       Int
  status       PaymentStatus @default(UNPAID)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("payments")
}

enum BidStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum TaskStatus {
  OPEN
  ASSIGNED
  COMPLETED
}

enum WorkStatus {
  IN_PROGRESS
  COMPLETED
}

enum PaymentStatus {
  UNPAID
  PAID
}
